sum = n + sum(n-1); if n > 0
    = 0;            if n = 0
    
      

#include <stdio.h>
int fun(int n) {
    static int sum = 0;
    if (n == 0)
    {
        return 0;
    } else {
        sum = n + fun(n-1);
    }
}

int main() {
    // Write C code here
    int sum;
    sum = fun(10);
    printf("sum = %d", sum);
    return 0;
}
